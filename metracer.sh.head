#!/bin/sh
# Thanks to https://coderwall.com/p/ssuaxa/how-to-make-a-jar-file-linux-executable
MYSELF=`which "$0" 2>/dev/null`
[ $? -gt 0 -a -f "$0" ] && MYSELF="./$0"

if test -n "$JAVA_HOME"; then
	java="$JAVA_HOME/bin/java"
	java_home=$JAVA_HOME
else
	java=$(which java)

	while [ -L "$java" ]; do
		java=$(readlink "$java")
	done

	java_home=$(dirname "$java")/..
fi

exec sudo -u jboss "$java" -Xbootclasspath/a:"$java_home/lib/tools.jar" -jar $MYSELF "$@"
exit 1
